<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:layout_width="fill_parent"
    android:id="@+id/newscontainer"
    android:layout_height="wrap_content"
    android:padding="2dp">
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:id="@+id/newscard"
        app:cardCornerRadius="30dp"
        android:backgroundTint="#1d8cb8dc"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/imagenewsicon"
            android:padding="4dp"
            app:civ_border_width="1dp"
            app:civ_border_color="#fcce03"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:orientation="vertical"
            android:layout_marginLeft="55dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:weightSum="1">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="istggdfe"
                    android:maxLength="24"
                    android:maxLines="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/textviewnamecos"
                    android:textStyle="bold"
                    android:textSize="15dp"
                    android:textColor="@color/colorAccent"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"

                    android:orientation="vertical"
                    android:paddingRight="7dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="kjkj"
                        android:layout_marginRight="20dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="10dp"
                        android:id="@+id/date"
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:textAlignment="gravity"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp" />

                </LinearLayout>




            </LinearLayout>
            <View
                android:layout_width="290dp"
                android:layout_height="1dp"
                android:alpha="0.4"

                android:layout_gravity="end"
                android:background="#787575"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <!--
                  <TextView
                      android:layout_width="fill_parent"
                      android:layout_height="wrap_content"
                      android:text="content"
                      android:textIsSelectable="true"
                      android:textColor="#035b59"
                      android:fontFamily="sans-serif-normal"
                      android:id="@+id/contenthomepage"
                      android:padding="4dp" /> -->

                <TextView
                    android:id="@+id/message12"
                    android:layout_width="fill_parent"
                    android:textIsSelectable="true"
                    android:layout_height="wrap_content"
                    android:linksClickable="true"
                    android:autoLink="all"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:padding="7dp" />



            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>