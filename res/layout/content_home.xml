<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#3e528d"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.udbhava.Home"
    tools:showIn="@layout/activity_home">

    <ProgressBar
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/progressbarhome"
        android:layout_centerInParent="true"/>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="500dp">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="12dp"

            android:orientation="horizontal"
            android:background="#3e528d">
                <ImageButton
                    android:layout_marginLeft="2dp"

                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:id="@+id/btnq0"
                    android:background="@mipmap/facebook"
                    android:layout_height="50dp"
                   />
            <ImageButton
                android:layout_marginLeft="5dp"
                android:padding="2dp"
                android:id="@+id/btnq1"
                android:foregroundGravity="center_vertical"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="15dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@mipmap/icon"/>
            <ImageButton
                android:layout_marginLeft="17dp"
                android:padding="2dp"
                android:id="@+id/btnq2"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="18dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/you"/>


            <ImageButton
                android:layout_marginLeft="26dp"
                android:id="@+id/btnq3"
                android:backgroundTint="#fff"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/mapia"/>
            <ImageButton
                android:layout_marginLeft="21dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="20dp"
                android:id="@+id/btnq4"
                android:backgroundTint="#fff"
                android:layout_width="29dp"
                android:layout_height="29dp"
                android:background="@drawable/campp"/>

            <ImageButton
               android:layout_marginLeft="28dp"
                android:id="@+id/btnq5"
                android:backgroundTint="#fff"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="16dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/cont"/>


        </LinearLayout>
        </HorizontalScrollView>


        <com.q42.android.scrollingimageview.ScrollingImageView
        android:id="@+id/scrolling_background"
        android:fitsSystemWindows="true"
        android:layout_width="fill_parent"
        android:layout_marginTop="70dp"
        android:layout_height="700dp"
        scrolling_image_view:speed="0.2dp"
        scrolling_image_view:src="@mipmap/fqli"
       />

    <com.q42.android.scrollingimageview.ScrollingImageView
        android:id="@+id/scrolling_foreground"
        android:layout_width="600dp"
        android:layout_marginTop="140dp"
        android:layout_height="wrap_content"
        scrolling_image_view:speed="0.07dp"
        scrolling_image_view:src="@mipmap/badal" />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/scrolling_foreground1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="160dp"

            scrolling_image_view:speed="0.04dp"
            scrolling_image_view:src="@mipmap/plane" />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/scrolling_foreground2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"

            scrolling_image_view:speed="0.04dp"
            scrolling_image_view:src="@mipmap/parschute" />

        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/scrolling_foreground124"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="240dp"

            scrolling_image_view:speed="0.08dp"
            scrolling_image_view:src="@mipmap/para" />
        <com.q42.android.scrollingimageview.ScrollingImageView
        android:id="@+id/scrolling_foreground89"
        android:layout_width="600dp"
        android:layout_marginTop="260dp"
        android:layout_height="wrap_content"
        scrolling_image_view:speed="0.1dp"
        scrolling_image_view:src="@mipmap/badal" />
        <com.q42.android.scrollingimageview.ScrollingImageView
            android:id="@+id/scrolling_foreground8tt9"
            android:layout_width="600dp"
            android:layout_marginTop="330dp"
            android:layout_height="wrap_content"
            scrolling_image_view:speed="0.2dp"
            scrolling_image_view:src="@mipmap/badal" />

    </FrameLayout>
    <com.skyfishjy.library.RippleBackground

        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="260dp"
        android:layout_marginTop="170dp"
        android:layout_height="260dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"

        android:id="@+id/content"
        app:rb_color="#285881"
        app:rb_type="strokeRipple"
        app:rb_radius="27dp"
        app:rb_strokeWidth="18dp"
        app:rb_rippleAmount="7"
        app:rb_duration="3000"
        app:rb_scale="6">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:id="@+id/centerImage"
            android:background="@mipmap/udbhavalogo11"/>
    </com.skyfishjy.library.RippleBackground>
    <io.github.francoiscampbell.circlelayout.CircleLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:cl="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="170dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        cl:cl_angleOffset="90"

        android:layout_marginRight="40dp"
        cl:cl_direction="clockwise">
        <Button
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cercle"
            android:drawableTop="@drawable/events"
            android:text="Events"
            android:id="@+id/eventsbutton"
            android:padding="20dp"
            android:onClick="onClick"
            android:textSize="8dp"
            android:backgroundTint="#320448"
            android:textColor="#fbfbfc"/>

        <Button
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:onClick="onClick"
            android:id="@+id/workshopbutton"
            android:background="@drawable/cercle"
            android:drawableTop="@drawable/workshop"
            android:drawableTintMode="add"
            android:text="Workshop"
            android:padding="20dp"
            android:textSize="8dp"
            android:backgroundTint="#f39c12"
            android:textColor="#fafafa"/>


        <Button
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:background="@drawable/cercle"
            android:id="@+id/highlightsbutton"
            android:drawableTop="@drawable/highlights"
            android:text="Highlights"
            android:textSize="8dp"
            android:padding="20dp"
            android:onClick="onClick"
            android:backgroundTint="#2980b9"
            android:textColor="#fdfdfd"/>

        <Button
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:id="@+id/sponsorbutton"
             android:background="@drawable/cercle"
            android:drawableTop="@drawable/sponsor"
            android:text="Sponsors"
            android:onClick="onClick"
            android:textSize="8dp"
            android:padding="20dp"
            android:backgroundTint="#c0392b"
            android:textColor="#fbfbfc"/>


        <Button
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/talksbutton"
            android:background="@drawable/cercle"
            android:drawableTop="@drawable/talks"
            android:text="Talks"
            android:textSize="8dp"
            android:padding="20dp"
            android:onClick="onClick"
            android:backgroundTint="#16a085"
            android:textColor="#f9f9fa"/>

    </io.github.francoiscampbell.circlelayout.CircleLayout>

</RelativeLayout>
