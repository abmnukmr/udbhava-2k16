<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.udbhava.Apply"
    tools:showIn="@layout/activity_apply">
    <ProgressBar
        android:layout_width="50dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="50dp"
        android:visibility="visible"
        android:id="@+id/progressbarcamp"
        android:layout_centerInParent="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:password="true"
        android:layout_marginTop="170dp"
        android:hint="enter PIN Number*"
        android:inputType="text"
          android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:imeOptions="actionDone"
        android:id="@+id/passord"/>
    <Button
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:textColor="#ffffff"
        android:id="@+id/submit"
        android:background="#284b27"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Submit"/>
    <Button
        android:layout_marginTop="10dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/applyfor"
        android:textColor="#ffffff"
        android:background="#590a1e"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:text="Apply For campus ambassdor"/>

</LinearLayout>
